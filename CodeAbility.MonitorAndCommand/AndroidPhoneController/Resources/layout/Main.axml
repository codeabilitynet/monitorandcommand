                    android:background="@drawable/RGBLEDButton"
                    android:gravity="center_vertical" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="260sp"
                    android:layout_height="60sp"
                    android:id="@+id/seekbarsLinearLayout">
                    <SeekBar
