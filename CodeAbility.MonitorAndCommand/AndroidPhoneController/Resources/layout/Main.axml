                        android:layout_height="20sp"
                        android:id="@+id/Photon_B_seekBarRed" />
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:id="@+id/Photon_B_seekBarGreen" />
                    <SeekBar
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:id="@+id/Photon_B_seekBarBlue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<!-- Photon C -->
